@using WebBanHang.Models
@{
    Layout = null;
    NGUOIDUNG nd = (NGUOIDUNG)Session["KhachHang"];
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chào mừng tới Nhà trọ xanh</title>
    <link href="~/IndexLayout/css/bootstrap.css" rel="stylesheet">
    <link href="~/IndexLayout/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/IndexLayout/css/flexslider.css" type="text/css" media="screen" />
    <link href="~/IndexLayout/css/sequence-looptheme.css" rel="stylesheet" media="all" />
    <link href="~/IndexLayout/css/style.css" rel="stylesheet">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="~/Areas/Content/ckeditor/ckeditor.js" type="text/javascript"></script>
    <link type="text/css" href="~/IndexLayout/css/slideshow.css" rel="stylesheet">
