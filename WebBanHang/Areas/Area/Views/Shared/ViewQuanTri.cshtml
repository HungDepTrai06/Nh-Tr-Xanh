<body>
    <div class="wrapper">
        <div class="header">
            <div class="container">
                <div class="row">
                    <div class="col-md-2 col-sm-2">
                        <div class="logo">
                            <a href="~/TinTuc/Index"><img src="~/IndexLayout/images/LoGo.jpg" style="width:100px; height:80px" /></a>
                        </div>
                    </div>
                    <div class="col-md-10 col-sm-10">
                        <div class="header_top">
                            <div class="row">
                                <div class="col-md-6">
                                    <ul class="topmenu">
                                        <li><a href="#">Xin chào - @nd.HOTENND</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="clearfix">
                        </div>
                        <div class="header_bottom">
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                    <span class="sr-only">
                                        Chuyển hướng
                                    </span>
                                    <span class="icon-bar">
                                    </span>
                                    <span class="icon-bar">
                                    </span>
                                    <span class="icon-bar">
                                    </span>
                                </button>
                            </div>
                            <div class="navbar-collapse collapse">
                                @if (nd.LEVEL == 1)
                                {
                                    <ul class="nav navbar-nav">
                                        <li class="active dropdown">
                                            <a href="~/Area/QuanTri_ND/Index" class="dropdown-toggle" data-toggle="dropdown">Thông tin cá nhân</a>
                                            <div class="dropdown-menu">
                                                <ul class="mega-menu-links">
                                                    <li><a href="~/Area/QuanTri_ND/SuaThongTin?id=@nd.MAND">Thông tin</a></li>
                                                    <li><a href="~/Custommer/LogOff/Index">Đăng xuất</a></li>
                                                </ul>
                                            </div>
                                        </li>
                                        <li class="dropdown">
                                            <a href="~/Area/QuanTri_ND/Index" class="dropdown-toggle" data-toggle="dropdown">Quản lý bài đăng</a>
                                            <div class="dropdown-menu mega-menu">
                                                <div class="row">
                                                    <div class="col-md-12 col-sm-12">
                                                        <ul class="mega-menu-links">
                                                            <li><a href="~/Area/QuanTri_ND/Index">Bài đã đăng</a></li>
                                                            <li><a href="~/Area/QuanTri_ND/BaiChoKD">Bài chờ kiểm duyệt</a></li>

                                                            <li><a href="/Area/QuanTri_ND/CreateTT">Đăng bài mới</a></li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                        <li><a href="/Area/QuanTri_ND/CreateTT">Đăng bài</a></li>
                                        <li><a href="/TinTuc/HuongDan">Hướng dẫn</a></li>
                                        <li><a href="/TinTuc/LienKet">Liên kết</a></li>
                                    </ul>
                                }
                                else
                                {
                                    <ul class="nav navbar-nav">
                                        <li class="active dropdown">
                                            <a href="~/Area/QuanTri_ND/Index" class="dropdown-toggle" data-toggle="dropdown">Quản lý tài khoản</a>
                                            <div class="dropdown-menu">
                                                <ul class="mega-menu-links">
                                                    <li><a href="~/Area/NGUOIDUNGs/Index">Danh sách người dùng</a></li>
                                                    <li><a href="~/Custommer/LogOff/Index">Đăng xuất</a></li>
                                                </ul>
                                            </div>
                                        </li>
                                        <li class="dropdown">
                                            <a href="~/Area/QuanTri_ND/Index" class="dropdown-toggle" data-toggle="dropdown">Quản lý bài đăng</a>
                                            <div class="dropdown-menu mega-menu">
                                                <div class="row">
                                                    <div class="col-md-12 col-sm-12">
                                                        <ul class="mega-menu-links">
                                                            <li><a href="~/Area/QuanTri_ND/Index">Đã được duyệt</a></li>
                                                            <li><a href="~/Area/QuanTri_ND/BaiKiemDuyet">Chờ kiểm duyệt</a></li>
                                                            <li><a href="/Area/QuanTri_ND/CreateTT">Đăng bài mới</a></li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                        <li><a href="/Area/QuanTri_ND/CreateTT">Đăng bài</a></li>
                                        <li><a href="~/Area/LOAITTs/Index">Loại Tin</a></li>
